            </dependency>
            <dependency>
                <groupId>org.eclipse.m2m.atl</groupId>
                <artifactId>org.eclipse.m2m.atl.engine</artifactId>
                <version>${atl.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.m2m.atl</groupId>
