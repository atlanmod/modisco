                <version>3.12.2</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.jdt</groupId>
                <artifactId>org.eclipse.jdt.apt.core</artifactId>
                <version>3.6.400</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.jdt</groupId>
                <artifactId>org.eclipse.jdt.launching</artifactId>
                <version>3.12.0</version>
            </dependency>
            <dependency>
                <groupId>org.hudsonci.plugins</groupId>
                <artifactId>birt-charts</artifactId>
                <version>3.0.3</version>
            </dependency>

            <!-- OCL -->
            <dependency>
                <groupId>org.atlanmod.emf</groupId>
                <artifactId>org.eclipse.ocl</artifactId>
                <version>${atlanmod.emf.version}</version>
                <type>pom</type>
            </dependency>

            <!-- EMF CDO -->
            <dependency>
                <groupId>org.eclipselabs</groupId>
                <artifactId>net4j</artifactId>
                <version>${cdo.version}</version>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.eclipselabs</groupId>
                <artifactId>cdo</artifactId>
                <version>${cdo.version}</version>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.eclipselabs</groupId>
                <artifactId>net4j.derby</artifactId>
                <version>${cdo.version}</version>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.eclipselabs</groupId>
                <artifactId>net4j.h2</artifactId>
                <version>${cdo.version}</version>
                <type>pom</type>
            </dependency>

            <!-- Acceleo -->
            <dependency>
                <groupId>org.eclipse.acceleo</groupId>
                <artifactId>org.eclipse.acceleo.maven</artifactId>
                <version>3.6.4</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.acceleo</groupId>
                <artifactId>org.eclipse.acceleo.engine</artifactId>
