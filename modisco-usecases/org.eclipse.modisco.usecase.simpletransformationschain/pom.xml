<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.atlanmod.modisco</groupId>
        <artifactId>modisco-usecases</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>org.eclipse.modisco.usecase.simpletransformationschain</artifactId>
    <packaging>bundle</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            !${project.artifactId}.*.internal.*,
                            ${project.artifactId}.*
                        </Export-Package>
                        <Require-Bundle>
                            org.eclipse.core.resources,
                            org.eclipse.jdt.core,
                            org.eclipse.m2m.atl.drivers.emf4atl;bundle-version="3.0.0",
                            org.eclipse.m2m.atl.engine;bundle-version="3.0.0",
                            org.eclipse.modisco.java.discoverer;bundle-version="[1.0.0,1.0.2]",
                            org.eclipse.modisco.kdm.uml2converter;bundle-version="[1.0.0,1.0.2]",
                            org.eclipse.modisco.infra.discovery.core;bundle-version="[1.0.0,1.0.2]",
                            org.eclipse.modisco.util.atl.core;;bundle-version="[1.0.0,1.0.2]"
                        </Require-Bundle>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.eclipse.core</groupId>
            <artifactId>org.eclipse.core.runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.core</groupId>
            <artifactId>org.eclipse.core.resources</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jdt</groupId>
            <artifactId>org.eclipse.jdt.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.m2m.atl</groupId>
            <artifactId>org.eclipse.m2m.atl.common</artifactId>
        </dependency>
        <!-- Internal -->
        <dependency>
            <groupId>org.atlanmod.modisco</groupId>
            <artifactId>org.eclipse.modisco.infra.discovery.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.atlanmod.modisco</groupId>
            <artifactId>org.atlanmod.modisco.discoverer.java</artifactId>
            <version>${project.version}</version>
        </dependency>
       <dependency>
            <groupId>org.atlanmod.modisco</groupId>
            <artifactId>org.eclipse.modisco.kdm.uml2converter</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
