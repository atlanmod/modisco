<project name="emtlCopy" default="emtlCopy">
	<property name="generator.dir" value="org/eclipse/gmt/modisco/workflow/generator" />
	<property name="settings.dir" value="${generator.dir}/_settings" />
	<property name="action.dir" value="${generator.dir}/actions" />
	<property name="activator.dir" value="${generator.dir}/activator" />
	<property name="manifest.dir" value="${generator.dir}/manifest" />
	<property name="modiscoworks.dir" value="${generator.dir}/modiscoworks" />
	<target name="emtlCopy">
		<copy todir="emtl/${generator.dir}">
			<fileset dir="${basedir}/bin/${generator.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="emtl/${settings.dir}">
			<fileset dir="${basedir}/bin/${settings.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="emtl/${action.dir}">
			<fileset dir="${basedir}/bin/${action.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="emtl/${activator.dir}">
			<fileset dir="${basedir}/bin/${activator.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="emtl/${manifest.dir}">
			<fileset dir="${basedir}/bin/${manifest.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="emtl/${modiscoworks.dir}">
			<fileset dir="${basedir}/bin/${modiscoworks.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
	</target>
	
	<target name="emtlCopyBack">
		<copy todir="bin/${generator.dir}">
			<fileset dir="emtl/${generator.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="bin/${settings.dir}">
			<fileset dir="emtl/${settings.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="bin/${action.dir}">
			<fileset dir="emtl/${action.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="bin/${activator.dir}">
			<fileset dir="emtl/${activator.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="bin/${manifest.dir}">
			<fileset dir="emtl/${manifest.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
		<copy todir="bin/${modiscoworks.dir}">
			<fileset dir="emtl/${modiscoworks.dir}">
				<include name="*.emtl" />
			</fileset>
		</copy>
	</target>
</project>
