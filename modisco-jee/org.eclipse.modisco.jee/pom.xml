<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <groupId>org.atlanmod.modisco</groupId>
      <artifactId>modisco-jee</artifactId>
      <version>1.0.0-SNAPSHOT</version>
  </parent>
   <artifactId>org.eclipse.modisco.jee</artifactId>
   <packaging>bundle</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            !${project.artifactId}.*.internal.*,
                            ${project.artifactId}.*
                        </Export-Package>
                        <Require-Bundle>
                            org.eclipse.core.runtime;bundle-version="3.6.0",
                            org.eclipse.ui;bundle-version="3.6.0",
                            org.eclipse.core.resources;bundle-version="3.6.0",
                            org.eclipse.gmt.modisco.infra.common.core;bundle-version="[1.0.0,1.0.2]",
                            org.eclipse.ui.ide;bundle-version="3.6.0",
                            org.eclipse.jdt.core;bundle-version="3.6.0",
                            org.eclipse.gmt.modisco.infra.common.ui;bundle-version="[1.0.0,1.0.2]",
                            org.eclipse.modisco.infra.discovery;bundle-version="[1.0.0,1.0.2]",
                            org.eclipse.modisco.infra.discovery.core;bundle-version="[1.0.0,1.0.2]"
                        </Require-Bundle>
                        <Bundle-Activator>
                            org.eclipse.modisco.jee.JEEActivator
                        </Bundle-Activator>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <dependencies>
        <dependency>
            <groupId>org.eclipse.platform</groupId>
            <artifactId>org.eclipse.core.runtime</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.platform</groupId>
            <artifactId>org.eclipse.core.resources</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jdt</groupId>
            <artifactId>org.eclipse.jdt.core</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- Internal -->
        <dependency>
            <groupId>org.atlanmod.modisco</groupId>
            <artifactId>org.eclipse.modisco.infra.discovery.core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
