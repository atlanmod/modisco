<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="org.eclipse.modisco.utils.chart.metamodel.chart.presentation.chartModelWizardID"
            name="%_UI_chartModelWizard_label"
            class="org.eclipse.modisco.utils.chart.metamodel.chart.presentation.chartModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/chartModelFile.gif">
         <description>%_UI_chartModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="org.eclipse.modisco.utils.chart.metamodel.chart.presentation.chartEditorID"
            name="%_UI_chartEditor_label"
            icon="icons/full/obj16/chartModelFile.gif"
            extensions="chart"
            class="org.eclipse.modisco.utils.chart.metamodel.chart.presentation.chartEditor"
            contributorClass="org.eclipse.modisco.utils.chart.metamodel.chart.presentation.chartActionBarContributor">
      </editor>
   </extension>

</plugin>
